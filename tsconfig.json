{
  "compilerOptions": {
    "module": "es2022",
    "moduleResolution": "node",
    "target": "es2020",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["vite/client"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    // Otras opciones...
  },
  "include": [
       "src/**/*.ts",
       "src/**/*.tsx",
       "src/**/*.vue",
       "src/**/*.d.ts",
       "src/**/*", "vite-env.d.ts"
     ]
}